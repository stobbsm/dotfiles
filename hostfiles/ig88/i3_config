# Use Mouse+$mod to drag floating windows to their wanted position
floating_modifier $mod

## Start Application Launchers
# start a terminal
bindsym $mod+Return exec {{terminal}}
bindsym $mod+Shift+w exec {{browser}}
bindsym $mod+Shift+f exec {{filemanager}}
# start dmenu (a program launcher)
# first define command line options
set $dmenu_cmd_opts -fn '{{font}}-{{fontsize}}' -l 10 -p '> ' -nb '{{background}}' -nf '{{foreground}}' -sb '{{light_background}}' -sf '{{dark_foreground}}'
bindsym $mod+d exec dmenu_run $dmenu_cmd_opts
bindsym $mod+p exec /home/stobbsm/.local/bin/passmenu $dmenu_cmd_opts
bindsym $mod+Shift+d exec i3-dmenu-desktop --dmenu="dmenu -i $dmenu_cmd_opts"
## End Application Launchers

# Lock screen
bindsym $mod+l exec $Locker

# kill focused window
bindsym $mod+Shift+q kill

